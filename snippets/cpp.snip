delete		class
snippet		class
abbr		class{};
	class ${1:#:name} {
		${2}
	public:
		${0}
	};

snippet		for_range
abbr		for(auto const& : ){}
	for (auto const& ${1:i} : ${2:#:container}) {
		${0}
	}

