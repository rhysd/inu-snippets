snippet		for_iterator
abbr		for(auto i = std::begin(...); ...)
	for (auto itr = std::begin(${1:#:container}); itr != std::end($1); ++itr) {
		${0}
	}

snippet		lambda
abbr		[](){ return ; }
	[${1:#:capture}](${2:auto const& x}){ return ${3:#:body}; }${0}

snippet		lambda_long
abbr		[](){}
	[${1:#:capture}](${2:#:args})${3:#:return_type}{
		${0}
	}

