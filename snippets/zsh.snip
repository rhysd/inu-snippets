delete		if
snippet		if
abbr		if [[]] then fi
	if [[ ${1:condition} ]]; then
		${0}
	fi

delete		ifelse
snippet		ifelse
abbr		if [[]] then else fi
	if [[ ${1:condition} ]]; then
		${2}
	else
		${0}
	fi

delete		elif
snippet		elif
abbr		elif [[]] then
	elif [[ ${1:#:condition} ]]; then
		${0:TARGET}

snippet		expr
abbr		$(())
options 'word'
	$(( ${0:expr} ))

delete		function
snippet		function
alias		func
	function ${1:#:name}(){
		${0}
	}
